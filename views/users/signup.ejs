<% layout("/layouts/boilerplate") %>
    <div class="row mt-3">
        <h1 class="col-6 off">SignUp on WanderLust</h1>
        <div class="col-6 offset-2">
            <form action="/signup" method="POST" class="needs-validation">
                <div class="mb-3">
                    <label for="username" class="form-label"> Username:</label>
                    <input type="text" class="form-control" required placeholder="Enter Username" id="username"
                    name="username">
                    <div class="valid-feedback">Looks good !</div>
                </div>
                <div class="mb-3">
                    <label for="email" class="form-label"> Email:</label>
                    <input type="email" class="form-control" required placeholder="Enter Email" id="email" name="email">
                    <div class="valid-feedback">Looks good !</div>
                </div>
                <div class="mb-3">
                    <label for="password" class="form-label"> Password:</label>
                    <input type="password" class="form-control" required placeholder="Enter Password" id="password" name="password">
                    <div class="valid-feedback">Looks good !</div>
                </div>
                <button class="btn btn-success">SignUp</button>

            </form>
        </div>
    </div>